<h1><%= name %> clienta</h1>
<%= form_for(@client) do |f| %>
    <% @client.errors.full_messages.each do |message| %>
        <div class= "be-red white top-space">
            * <%= message %>
        </div>
    <%end%>
    <div class="field">
        <%= f.text_field :name, placeholder: "Nombre de la clienta", class:"form-control" %>
    </div>
   
    <div class="field">
        <%= f.submit "Guardar", class:"btn-custom"%>
    </div>
<% end %>