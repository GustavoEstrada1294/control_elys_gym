<h1 class="text-center"><%= name %> Suplemento</h1>
    <%= form_for(@product) do |f| %>
        <% @product.errors.full_messages.each do |message| %>
            <div class= "color-gym white top-space">
                * <%= message %>
            </div>
        <%end%>
        
        <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
        </div>
        <div class="form-group mt-3">
            <%= f.text_field :name, placeholder: "Nombre", class:"form-control" %>
        </div>
        <div class="form-group  mt-2">
            <%= f.text_field :type_product, placeholder: "Tipo de Suplemento", class:"form-control" %>
        </div>
        <div class="form-group  mt-2">
            <%= f.text_field :trademark, placeholder: "Marca", class:"form-control" %>
        </div>
        <div class="form-group  mt-2">
            <%= f.number_field :price, placeholder: "Precio", class:"form-control" %>
        </div>
        <div class="form-group mt-2">
            <%= f.text_field :description, placeholder: "Descripcion del suplemento", class:"form-control" %>
        </div>
        <div class="form-group mt-2">
            <%= f.submit "Guardar", class:"btn btn-outline-success"%>
        </div>
    <%end%>