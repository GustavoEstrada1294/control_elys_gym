<div class="d-grid gap-2 col-6 mx-auto">
  <%=link_to "NUEVO REGISTRO DE SUSCRIPCION", new_subscription_type_path, class:"btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @subscription_types.each do |subscription| %>
        <div class="col text-center">
          <h1 class="mt-5"><%=link_to subscription.name, subscription %></h1>
          <h1>$<%= subscription.total%></h1>
          <%= button_to "Eliminar", subscription, class: "btn btn-outline-danger",method: :delete %>  
        </div>
    <%end%>  
  </div>
</div>