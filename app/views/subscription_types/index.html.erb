<div class="d-grid gap-2 col-6 mx-auto">
  <%=link_to "NUEVO REGISTRO DE SUSCRIPCION", new_subscription_type_path, class:"btn btn-primary" %>
</div>

<div class="container" style="margin-top:5%;">
  <div class="row">
    <% @subscription_types.each do |subscription| %>
      <div class="col-sm-4">
        <div class="card text-dark bg-info mb-3 shadow-lg" style="max-width: 25rem; ">
          <div class="col text-center">
            <h1><%= link_to subscription.name.upcase, subscription, class:"text-black"%></h1>
            <h2>$<%= subscription.total%></h2>
          </div>
        </div>  
      </div>
    <%end%>  
  </div>
</div>
