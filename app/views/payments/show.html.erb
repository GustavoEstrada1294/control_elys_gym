<h1><%=@payment.client.name %></h1>
<%if @payment.subscription_type.present?%>
    <h3>subscripcion</h3>
    <h5><%=@payment.subscription_type.name %></h5>
    <h3>precio</h3>
    <h5>$<%=@payment.subscription_type.total %></h5>
<%else%>
<h3>Compro</h3>
    <h5><%=@payment.product.name%></h5>
    <div>
        <%= image_tag url_for(@payment.product.image) %>
    </div>
    
    <h5><%=@payment.product.trademark%></h5>
    <h5><%=@payment.product.type_product%></h5>
    <h5>$<%=@payment.product.price%></h5>
<%end%>

<div>
    <%=link_to "EDITAR", edit_payment_path(@payment), class:"btn btn-outline-primary"%>
</div>

<div class = "container_card">
    <div class="card text-white bg-primary mb-3 " style="width: 30rem;">
    <div class="card-header">
        CLIENTA
    </div>
        <ul class="list-group list-group-flush ">
            <li class="list-group-item border-primary mb-0 "> </li>
            <li class="list-group-item border-primary mb-0">FECHA DE INSCRIPCION:</li>
            <li class="list-group-item border-primary mb-0 text-center"></li>
        </ul>
    </div>
</div>  